

<div id="fb-login">
<p>Signup with facebook: <a href="https://graph.facebook.com/oauth/authorize?client_id=124518964277647&amp;redirect_uri=http://localhost:3001/oauth2&amp;scope=email">Facebook</a></p>
</div>

<div id="fb-root"></div>
<script src="http://connect.facebook.net/en_US/all.js"></script>
<script>
  FB.init({appId: '124518964277647', status: true, cookie: true, xfbml: true});
  FB.Event.subscribe('auth.sessionChange', function(response) {
    if (response.session) {
      $('#fb-login').hide();
      // A user has logged in, and a new cookie has been saved
    } else {
      // The user has logged out, and the cookie has been cleared
      $('#fb-login').show();
    }
  });
</script>


